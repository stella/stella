  </head>

  <body id="{{body_class}}">

    <div class="container navbar {{#with_navbar}}navbar-fixed-top{{/with_navbar}}">
      <div class="navbar-inner">
        <div class="container navbar-line">
          {{#with_navbar}}
          <a href="/" class="brand" title="The Future of Web Monitoring">Stella</a>
          {{/with_navbar}}
          {{#colonels_only}}
          <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <img src="{{gravatar_uri}}?s=18&amp;r=g" class="avatar"/>
              {{cust.email}}
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="/account">Account</a></li>
              <li><a href="/account/billing">Billing (<em>${{monthly_bill}}/month</em>)</a></li>
              <li><a href="/docs">API Docs</a></li>
              {{#colonels_only}}
              <li class="divider"></li>
              <li class=""><a href="/colonel">Colonel</a></li>
              {{/colonels_only}}
              <li class="divider"></li>
              <li><a href="/logout">Sign Out</a></li>
            </ul>
          </div>
          <div class="btn-group pull-right">
          <a href="/colonel/customers">Customers</a> |
          <a href="/colonel/hosts">Hosts</a> |
          <a href="/colonel/checkups">Checkups</a> |
          <a href="/colonel/redump">Redump</a> |
          <a href="/colonel/queues">Queues</a>
          </div>
          {{/colonels_only}}
          {{^colonels_only}}
          <div id="nav-hideable">
            <div class="btn-group pull-right">
              <a href="/login" class="btn btn-large cufon" id="toggle-signin">Sign In</a>
            </div>
            <ul class="nav pull-right">
              {{#topnav}}
                <li><a href="{{uri}}" class="{{css}}">{{{text}}}</a></li>
              {{/topnav}}
            </ul>
          </div>
          <form id="form-signin" class="form-inline hidden pull-right" method="post" action="/login">
            <input id="input-email" name="email" type="text" class="input" placeholder="Email">
            <input type="password" name="password" class="input-small" placeholder="Password">
            <button type="submit" class="btn btn-large cufon btn-inverse">Sign in</button>
          </form>
          {{/colonels_only}}
        </div>
      </div>
    </div>

    {{#with_navbar}}
    <hr class="reset">
    {{/with_navbar}}

    <div class="container">
      {{#with_navbar}}
      <span id="{{hello_style}}"></span>
